

<% if @counter %>
  document.getElementById("displaynonebutton").innerHTML = "<%= j render 'counter' %>"; // affiche le compteur si des écoles sont dans les paramètres de sessions (au clic sur "+")
  document.getElementById("mon_comparateur_count").innerHTML = "<%= session[:selection].size %>"; // affiche le bon nombre d'écoles sélectionnées dans la pastille après le clic sur "+"
<% else %>
  document.getElementById("displaynonebutton").innerHTML = ""; // masque la div de la pastille si aucune école n'est présente dans les paramètres de session au clic sur "+" de la page
<% end %>



// ajoute ou masque les propriétés Css de la pastille au clic sur "+"
if (document.getElementById("mon_comparateur_count").innerHTML !== "0") {
  document.getElementById("mon_comparateur_count").classList.add('orange-counter')
} else {
  document.getElementById("mon_comparateur_count").classList.remove('orange-counter')
}
