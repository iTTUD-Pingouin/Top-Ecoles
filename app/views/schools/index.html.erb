

<div class="main-container">

  <%= render 'components/sidebar_filters' %>

  <div class="container">
    <%= render 'components/count_and_tags' %>

    <div class="results-container">
      <div class="row">
        <% @schools.each do |school| %>
          <% if school.college %>
            <div class="col-xs-12 col-sm-6 col-md-4">
              <div class="main-card">
                <div class="card-image">
                  <%= link_to compare_school_path(school), remote: true do %>
                    <p class="card-image-button">
                      +
                    </p>
                  <% end %>
                </div>
                <div class="give-card-space"></div>
                  <div class="card-school-name">
                    <% if school.name.length > 38 %>
                      <h2>Collège <%= school.name[0..34] + "..." %></h2>
                    <% else %>
                      <h2>Collège <%= school.name%></h2>
                    <% end %>
                  </div>

                  <div class="card-description">
                    <h5><%= school.commune %></h5>
                    <p><%= school.statut %></p>
                    <ul class="list-inline">
                      <li>Ecole</li>
                      <li class="li-active">College</li>
                      <li>Lycee</li>
                      <li>Prepa</li>
                      <li>BTS</li>
                    </ul>
                  </div>
                  <div class="card-rating">
                    <%= link_to schools_path do %>
                      <div class="card-rating-star" src="">
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
          <% if school.lycee %>
            <div class="col-xs-12 col-sm-6 col-md-4">
              <div class="main-card">
                <div class="card-image">
                  <div class="card-image-button">
                    <%= link_to compare_school_path(school), remote: true do %>
                      <i class="fas fa-heart"></i>
                    <% end %>
                  </div>
                </div>
                <div class="give-card-space">
                  <div class="card-school-name">
                    <% if school.name.length > 38 %>
                      <h2>Lycée <%= school.name[0..34] + "..." %></h2>
                    <% else %>
                      <h2>Lycée <%= school.name%></h2>
                    <% end %>
                  </div>

                  <div class="card-description">
                    <h5><%= school.commune %></h5>
                    <p><%= school.statut %></p>
                    <ul class="list-inline">
                      <li>Ecole</li>
                      <li>College</li>
                      <li class="li-active">Lycee</li>
                      <li>Prepa</li>
                      <li>BTS</li>
                    </ul>
                  </div>
                  <div class="card-rating">
                    <%= link_to schools_path do %>
                      <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="far fa-star"></i>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

</div>










